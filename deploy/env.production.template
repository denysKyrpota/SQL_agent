# ==============================================================================
# SQL AI Agent - Production Environment Configuration
# ==============================================================================
# Copy this file to the project root as .env and fill in the values.
# ==============================================================================

# --- Deployment Mode ---
# Serve the React frontend from FastAPI (single-process deployment)
SERVE_FRONTEND=true

# --- Environment ---
ENVIRONMENT=production
LOG_LEVEL=INFO

# --- CORS ---
# Comma-separated list of allowed origins. When SERVE_FRONTEND=true and accessing
# via the same host:port, CORS is not needed, but keep the server's own origin
# listed for safety. Add any additional origins that need access.
CORS_ORIGINS_STR=http://localhost:8000

# --- SQLite (Application Database) ---
DATABASE_URL=sqlite:///./data/app_data/sqlite.db

# --- PostgreSQL (Target Database - read-only) ---
POSTGRES_URL=postgresql://user:password@host:5432/dbname
POSTGRES_TIMEOUT=30

# --- OpenAI (Standard) ---
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.0
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
RAG_SIMILARITY_THRESHOLD=0.85

# --- Azure OpenAI (uncomment if using Azure instead of standard OpenAI) ---
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your-embedding-deployment
# AZURE_OPENAI_SUPPORTS_TEMPERATURE=false

# --- Authentication ---
# IMPORTANT: Generate a strong random key for production
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET
SESSION_EXPIRATION_HOURS=8
